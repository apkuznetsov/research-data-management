@model Webapp.Models.Experiments.ExperimentDeleteViewModel

@{
    ViewData["Title"] = "Удалить эксперимент";
}

<div>
    <h4>Удалить эксперимент</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metadata)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metadata)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExperimentSensorName)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Sensors"
               asp-action="Details"
               asp-route-id="@Model.ExperimentSensorId">
                @Html.DisplayFor(model => model.ExperimentSensorName)
            </a>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ExperimentId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку экспериментов</a>
    </form>
</div>
