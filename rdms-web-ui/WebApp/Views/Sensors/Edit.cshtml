@model Webapp.Models.SensorEditViewModel

@{
    ViewData["Title"] = "Редактирование информации о датчике";
}

<h4>Редактирование информации о датчике</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SensorId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Metadata" class="control-label"></label>
                <input asp-for="Metadata" class="form-control" />
                <span asp-validation-for="Metadata" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="DataTypeId" />

            <div class="form-group">
                <div>
                    @Html.DisplayNameFor(model => model.DatatypeScheme)
                </div>
                <div>
                    @Html.DisplayFor(model => model.DatatypeScheme)
                </div>
            </div>

            <div class="form-group">
                <label asp-for="IpAddress" class="control-label"></label>
                <input asp-for="IpAddress" class="form-control" />
                <span asp-validation-for="IpAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Port" class="control-label"></label>
                <input asp-for="Port" class="form-control" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CommunicationProtocolId" class="control-label"></label>
                <select asp-for="CommunicationProtocolId" class="form-control" asp-items="ViewBag.CommunicationProtocolId"></select>
                <span asp-validation-for="CommunicationProtocolId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Delete" asp-route-id="@Model.SensorId">Удалить</a> |
    <a asp-action="Index">Вернуться к списку датчиков</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
