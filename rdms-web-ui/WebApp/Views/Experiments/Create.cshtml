@model Webapp.Models.Experiments.ExperimentCreateViewModel

@{
    ViewData["Title"] = "Создать эксперимент";
}

<h4>Создать эксперимент</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Metadata" class="control-label"></label>
                <input asp-for="Metadata" class="form-control" />
                <span asp-validation-for="Metadata" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="SensorId" ></label>
                <select class="form-control" 
                        asp-for="SensorId" 
                        asp-items="ViewBag.SensorId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку экспериментов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

