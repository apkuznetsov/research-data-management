@model Webapp.Models.Experiments.ExperimentDetailsViewModel

@{
    ViewData["Title"] = "Информация об эксперименте";
}

<div>
    <h4>Информация об эксперименте</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metadata)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metadata)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExperimentSensorName)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Sensors"
               asp-action="Details"
               asp-route-id="@Model.ExperimentSensorId">
                @Html.DisplayFor(model => model.ExperimentSensorName)
            </a>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ExperimentId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку экспериментов</a>
</div>
